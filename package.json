{
  "name": "aozora-editor",
  "productName": "aozoraeditor",
  "version": "1.3.0",
  "description": "application for aozoraeditor",
  "main": "build/aozoraeditor.js",
  "scripts": {
    "build": "tsc && chcp 65001",
    "start": "npm run build && electron .",
    "build-win": "npm run build && electron-builder --win --x64"
  },
  "keywords": [
    "aozora",
    "book",
    "editor",
    "free"
  ],
  "author": {
    "name": "numthree-uchimura (https://github.com/N3-uchimura/)",
    "email": "uchimura@numthree.net"
  },
  "dependencies": {
    "csv": "^6.4.1",
    "electron-log": "^5.4.0",
    "encoding-japanese": "^2.2.0",
    "extract-zip": "^2.0.1",
    "iconv-lite": "^0.6.3",
    "kanadaku": "^1.1.0",
    "node-cache": "^5.1.2",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/encoding-japanese": "^2.2.1",
    "@types/node": "^20.19.9",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "net.numthree.aozoraeditor",
    "productName": "aozoraeditor",
    "files": [
      "build/**/*",
      "package.json",
      "!dist/**/*",
      "!src/**/*",
      "!.gitignore",
      "!.vscode"
    ],
    "extraResources": [
      "assets",
      "www/**/*"
    ],
    "squirrelWindows": {},
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/aozora.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "license": "MIT"
}
